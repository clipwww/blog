// @tailwind base;
@tailwind components;
@tailwind utilities;

::-webkit-scrollbar 
  width 2px

.home .hero img
  max-width 550px!important;

@import url('https://fonts.googleapis.com/css?family=Noto+Sans+TC:500&display=swap');

.vuepress-blog-theme-content
  // background-color var(--c-bg) !important;
{$contentClass}
  padding-bottom 60px

blockquote
  color var(--c-text)

.go-to-top
  background-color var(--c-bg-lighter);
  height: 2rem;
  border-radius: 5px;
  padding: 5px;
  display: block;
  opacity .9;
  box-shadow: 1px 1px 3px rgba(0,0,0, .3);
  &:hover 
    opacity 1


.vssue 
  color: var(--c-text) !important
  .vssue-new-comment .vssue-new-comment-input
    background-color var(--c-bg);

  .vssue-pagination 
    display none !important;

  .vssue-comments
    margin-top 30px

  .markdown-body
    color var(--c-text)


.suggestion
  .page-title, .header
    color: $textColor

.vuepress-roughviz
  color: $textColor

.zoom-overlay
  background-color rgba(0,0,0, .7)

@media (max-width: $MQMobile)
  .vuepress-blog-theme-content
    footer 
      margin 0 -1.5rem;
      border-radius 5px;